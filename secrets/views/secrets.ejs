<%- include("partials/header.ejs") %>
<%- include("partials/navbar.ejs") %>

<main class="secrets">
    <button class="btn secret_btn">Add Secret</button>
    <form action="/secrets" method="post">
        <label><h2><b>Secret</b></h2></label>
        <textarea class="form-control" type="text" placeholder="Enter Secret" maxlength="140" required></textarea>
        <p>Character Count: <span>0</span> / 140</p>
        <button class="btn" type="submit">Share</button>
    </form>
    <div class="container justify-content-center secrets_view">
        <div class="row cols-3 justify-content-center">
        <% secrets.forEach(element => { %>
            <div class="col">
                <%= element %>
                <p class="text-muted"></p>
            </div>
        <% }) %>
        </div>
    </div>
</main>

